# Security and URL Rewriting

# Prevent directory listing
Options -Indexes

# Protect sensitive files
<FilesMatch "^(database\.sql|\.htaccess|\.env)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Protect config directory
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteRule ^config/ - [F,L]
</IfModule>

